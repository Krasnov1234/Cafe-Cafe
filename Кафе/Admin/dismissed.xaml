        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Уволенные.jpg"/>
        </Grid.Background>
        
        <DataGrid HorizontalAlignment="Left"
                  Height="290"
                  Margin="10,10,0,0" 
                  VerticalAlignment="Top"
