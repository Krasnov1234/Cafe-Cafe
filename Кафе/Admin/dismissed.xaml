        <Button Content="Востановить"
                HorizontalAlignment="Left"
                Margin="313,302,0,0"
                VerticalAlignment="Top" 
                Width="126" 
                Height="37" 
                Style="{StaticResource Entrance}"
                Background="#FF8EF96E" 
                FontSize="20" 
                Click="Button_Click"/>

        <Button Content="Назад"
                HorizontalAlignment="Left"
                Margin="24,310,0,0"
                VerticalAlignment="Top"
                Width="75" 
                Style="{StaticResource Entrance}" 
                Background="#FF8EF96E" 
                FontSize="20" 
