<Window x:Class="Кафе.Cooks.Orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Кафе.Cooks"
        mc:Ignorable="d"
        Title="Orders" Height="460.825" Width="629.897" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Кафе;component/Resources/Заказы.jpg"/>
        </Grid.Background>
        <DataGrid HorizontalAlignment="Left" 
                  Height="358"
                  Margin="26,10,0,0" 
                  VerticalAlignment="Top"
                  Width="238"/>
        
        <Button Content="Готовится"
                HorizontalAlignment="Left"
                Margin="287,136,0,0"
                VerticalAlignment="Top"
                Width="118" Height="48" 
                Click="preparing"  FontSize="20"
                Style="{StaticResource Entrance}"
                Background="#FF8EF96E"/>
        
        <Button Content="Готов"
                HorizontalAlignment="Left"
                Margin="287,223,0,0" VerticalAlignment="Top"
                Width="118" Height="48" Click="ready"
                FontSize="20" Style="{StaticResource Entrance}" 
                Background="#FF8EF96E"/>
        
        <Button Content="Назад" 
                HorizontalAlignment="Left"
                Margin="10,373,0,0"
                VerticalAlignment="Top" 
                Width="118"
                Height="48" Click="back" 
                FontSize="20" Style="{StaticResource Entrance}"
                Background="#FF8EF96E"/>

    </Grid>
</Window>
